<div class="slider user-page">
    <img src="/images/icon/slider.jpg" alt="slider">
</div>

{{!-- Normal Pages --}}
<div class="container ">
    <div class=" flex-grow-1 container-p-y row">
        <h4 class="fw-bold  mb-4">Category List</h4>
        {{#each category}}
        <div class="col-sm-6 col-lg-4 mb-4">
            <a class="text-secondary" href="/c/{{this.title}}">
                <div class="card text-center">
                    <div class="card-body">
                        <p class="card-text">Category {{this.no}} </p>
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text "><small class="text-muted">Click to View products</small></p>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>