{{>user-top}}

<div class="slider user-page">
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <ol id="carousel-indicators" class="carousel-indicators">
           
            <li data-bs-target="#carouselExample" data-bs-slide-to="0" class=""></li>
            <li data-bs-target="#carouselExample" data-bs-slide-to="1" class=""></li>
            <li data-bs-target="#carouselExample" data-bs-slide-to="2" class=""></li>
           
        </ol>
        <div id="carousel-inner" class="carousel-inner">
            
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/icon/slider.jpg" alt="First slide" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/icon/slider.jpg" alt="First slide" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/icon/slider.jpg" alt="First slide" />
            </div>
          

        </div>
        <a class="carousel-control-prev" href="#carouselExample" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExample" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
 
</div>

{{!-- Normal Pages --}}
<div class="container ">
    <div class=" flex-grow-1 container-p-y row justify-content-center">
        <h4 class="fw-bold  mb-4">CATEGORY LIST</h4>
        {{#each category}}
        <div class="col-sm-6 col-lg-4 mb-4">
            <a class="text-secondary" href="/list/{{this.title}}">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text "><small class="text-muted">Click to View products</small></p>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
    <div class=" flex-grow-1 row justify-content-center">
        <h4 class="fw-bold  mb-4">LATEST PAINTS</h4>
        {{#each latestProducts}}
        <div class="col-sm-6 col-lg-3 mb-4">
            <a class="text-secondary" href="/list/{{this.category}}/{{this.prId}}/view">
                <div class="card h-100">
                    <img class="card-img-top" src="/images/products/{{this.image.[0]}}" alt="product image" />
                    <div class="heart-icon">
                        <i class='bx bxs-heart'></i>
                    </div>
                    <div class="card-body card-boarder">
                        <h5 class="">{{this.title}}</h5>
                        <p>Size : {{this.size}}</p>
                        <p>{{this.medium}} - {{this.quality}}</p>
                        <div class="card-rate mt-2">
                            <div class="artist-rate-card section-two" title="artist-rate">
                                <div class="rate">
                                    <p><i class='bx bxs-star'></i> 3.7</p>
                                </div>
                            </div>
                            <div class="favorite">
                                <i class='bx bxs-heart'></i>
                                <p>(500)</p>
                            </div>
                        </div>
                        <div class="card-price mt-2">
                            <h4 class="text-dark">₹ {{this.price}}</h4>
                            <h6>₹4000</h6>
                            <i class='bx bxs-offer'></i>
                            <h6> 25% off</h6>
                        </div>
                        <small>Free delivery</small>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>

