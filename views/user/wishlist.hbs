{{>user-top}}
<div class="container user-page">
    <div class=" flex-grow-1 container-p-y">
        <h4 class="fw-bold  mb-4">Account</h4>
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">

                    <li class="nav-item">
                        <a class="nav-link" href="/profile"><i class='bx bxs-user me-1'></i>
                            Profile</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link " href="/address"><i class='bx bxs-map'></i> Manage Addresses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/wishlist"><i class='bx bxs-heart'></i> Wishlist</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/order"><i class='bx bxs-package'></i> Orders</a>
                    </li>

                </ul>

                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img src="/images/user/{{user.image}}" alt="user-avatar" class="d-block rounded"
                                height="100" onerror="this.onerror=null;callfun(this);" width="100"
                                id="uploadedAvatar" />
                            <div class="button-wrapper">


                                <h5 class="text-dark mb-1 ">{{user.firstName}} {{user.lastName}}</h5>
                                <p class="text-muted mb-1">UR ID : {{user.urId}}</p>

                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body rounded-3 "
                        style="background-color: rgb(226, 226, 226); padding:20px 10px 10px 10px;">
                        {{#if wishlist.[0]}}
                        <div class="row">
                            {{#each wishlist}}
                            <div class="col-12 col-md-6" style="position: relative;">
                                <a href="/list/{{this.category}}/{{this.prId}}/view" class="text-dark ">
                                    <div class="card p-1 mb-2 ">
                                        <div class="">
                                            <div class="d-flex">
                                                <img class="order-list-image" src="/images/products/{{this.image.[0]}}"
                                                    alt="">
                                                <div class="">
                                                    <p class="m-0 mb-2 fw-bold">
                                                        {{this.title}}_{{this.prId}}_{{this.size}}
                                                    </p>
                                                    <small class="m-0 ">Size : {{this.size}} | Category :
                                                        {{this.category}}</small><br>
                                                    <p class="m-0"><strong>₹ {{this.price}}</strong>{{#if ogPrice}}<span
                                                            class="text-decoration-line-through ms-2">₹
                                                            {{this.ogPrice}}</span><span
                                                            class="text-success ms-2">{{this.percentage}}%
                                                            offer</span>{{/if}}</p>
                                                    <small>Free delivery</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <div class="closeButton" onclick="removeWishProduct('{{this.prId}}')">
                                    <i class='bx bx-x'></i>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{else}}
                        <div class="d-flex justify-content-center">

                            <div>
                                <div style="width: 100%; " class="d-flex justify-content-center">
                                    <img style="width: 100px;" src="/images/icon/heart.png" alt="">
                                </div>
                                <h4 class="mt-3">Empty wishlist </h4>
                            </div>

                        </div>
                        {{/if}}
                    </div>



                </div>
            </div>
        </div>
    </div>

</div>
</div>
{{>footer}}
<script>
    document.getElementById('profile').className = "dropdown-item active"
</script>

