{{>user-top}}
<div class="container user-page">
    <div class=" flex-grow-1 container-p-y">
        <h4 class="fw-bold  mb-4">Account</h4>
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">

                    <li class="nav-item">
                        <a class="nav-link" href="/profile"><i class='bx bxs-user me-1'></i>
                            Profile</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link " href="/address"><i class='bx bxs-map'></i> Manage Addresses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/whish-list"><i class='bx bxs-heart'></i> Whish list</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/order"><i class='bx bxs-package'></i> Orders</a>
                    </li>

                </ul>

                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img src="/images/user/{{user.image}}" alt="user-avatar" class="d-block rounded"
                                height="100" onerror="this.onerror=null;callfun(this);" width="100"
                                id="uploadedAvatar" />
                            <div class="button-wrapper">


                                <h5 class="text-dark mb-1 ">{{user.firstName}} {{user.lastName}}</h5>
                                <p class="text-muted mb-1">UR ID : {{user.urId}}</p>

                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body rounded-3 "
                        style="background-color: rgb(226, 226, 226); padding:20px 10px 10px 10px;">
                        {{#if order}}
                        <p class="text-center order-list-small d-block d-sm-none">Rotate the screen for the correct view
                        </p>
                        {{#each order}}
                        <a href="/order/details?urId={{this.urId}}&orId={{this.orId}}&prId={{this.prId}}"
                            class="text-dark ">
                            <div class="card p-1 mb-2">
                                <div class="row pe-2">
                                    <div class="col-3 col-sm-6 col-md-5">
                                        <div class="d-flex">
                                            <img class="order-list-image" src="/images/products/{{this.image.[0]}}"
                                                alt="">
                                            <div class="d-none d-sm-block">
                                                <p class="m-0 mb-2 fw-bold">{{this.title}}</p>
                                                <small class="m-0 ">Order ID : {{this.orId}}</small><br>
                                                <small class="m-0 ">{{this.date}}</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2 d-none d-md-block">
                                        <p class="m-0"><strong>â‚¹ {{this.price}}.00</strong></p>
                                    </div>
                                    <div class="col-9 col-sm-6 col-md-5">
                                        {{#if this.cancelled}}
                                        <p class="m-0 mb-2 text-end "><strong>Cancelled on
                                                {{this.cancelDate}}</strong>
                                        </p>
                                        <p class="text-end order-list-small text-danger"><span
                                                class="status status-{{this.status}} p-0 me-2"></span>
                                            {{this.message}}</p>
                                    </div>
                                    {{else}}
                                    <p class="m-0 mb-2 text-end"><strong>Delivery expected by
                                            {{this.deliveryDate}}</strong>
                                    </p>
                                    <p class="text-end order-list-small"><span
                                            class="status status-{{this.status}} p-0 me-2"></span>
                                        {{this.message}}</p>
                                </div>
                                {{/if}}
                            </div>
                    </div>
                    </a>
                    {{/each}}
                    {{else}}
                    <div class="d-flex justify-content-center">

                        <div>
                            <div style="width: 100%; " class="d-flex justify-content-center">
                                <img style="width: 100px;" src="/images/icon/order-list.png" alt="">
                            </div>
                            <h4 class="mt-3">NO ORDERS </h4>
                        </div>

                    </div>
                    {{/if}}



                </div>
            </div>
        </div>
    </div>

</div>
</div>
{{>footer}}
<script>
    document.getElementById('order').className = "dropdown-item active"
</script>

