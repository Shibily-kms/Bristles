{{>admin-top}}
{{>admin-side}}
<div class="admin-content-page-over">
    <div class=" container-fluid top-page-padding">
        {{!-- Header --}}
        <h4 class="fw-bold  mb-4">Order List</h4>
        <!-- Basic Layout -->

        <!-- Hoverable Table rows -->
        <div class="admin-table-div">

            <div class="table-responsive">
                <table class="table table-hover css-serial" id="table_id">
                    <thead>
                        <tr>
                            <th>Sl No</th>
                            <th>Date</th>
                            <th>OR ID</th>
                            <th>UR ID</th>
                            <th>Methord</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        {{#each order}}
                        <tr>
                           
                                <td></td>
                                <td>{{this.date}}</td>
                                <td>{{this.orId}}</td>
                                <td>{{this.urId}}</td>
                                <td>{{this.methord}}</td>
                                <td>â‚¹{{this.amount}}</td>
                                <td><span class="status status-{{this.status}}">{{this.status}}</span></td>
                                <td>
                                    <span class="table-action-td">
                                        <a href="/admin/order-list/details?orId={{this.orId}}" data-bs-toggle="tooltip"
                                            data-bs-offset="0,4" data-bs-placement="top" data-bs-html="true"
                                            title="view order">
                                            <button type="button" class="btn rounded-pill btn-icon btn-dark">
                                                <span class="tf-icons bx bxs-show"></span>
                                            </button>
                                        </a>
                                    </span>
                                </td>
                           
                        </tr>
                        {{/each}}

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>



<script>
    document.getElementById('order').classList += " active"
</script>