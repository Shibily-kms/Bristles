{{>admin-top}}
{{>admin-side}}
<div class="admin-content-page-over">
    <div class=" container-fluid top-page-padding">
        <h4 class="fw-bold  mb-4">{{user.userName}}</h4>

        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">

                    <li class="nav-item">
                        <a class="nav-link " href="/admin/user-list/{{order.[0].urId}}/view"><i class="bx bx-user me-1"></i>
                            Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/user-list/{{order.[0].urId}}/orders"><i
                                class="bx bx bxs-package me-1"></i> Orders</a>
                    </li>

                </ul>

                <div class="card mb-4">
                    <h5 class="card-header">Profile Details</h5>
                    <!-- Account -->

                    <div class="card-body">
                        <div class="d-sm-flex justify-content-between">
                            <div class="d-flex align-items-start align-items-sm-center gap-4">
                                <img src="/images/user/{{order.[0].image}}" alt="user-avatar" class="d-block rounded"
                                    height="100" width="100" id="uploadedAvatar"
                                    onerror="this.onerror=null;callfun(this);" />
                                <div class="button-wrapper">
                                    <h5 class="text-dark mb-1 ">{{order.[0].firstName}} {{order.[0].lastName}}</h5>
                                    <p class="text-muted mb-1">UR ID : {{order.[0].urId}}</p>
                                </div>
                            </div>

                        </div>
                    </div>
                    <hr class="my-0" />

                    <div class="card-body">
                        {{!-- --}}


                        <div class="table-responsive">
                            <table class="table table-hover css-serial" id="table_id">
                                <thead>
                                    <tr>
                                        <th>Sl No</th>
                                        <th>Date</th>
                                        <th>OR ID</th>
                                        <th>UR ID</th>
                                        <th>Methord</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>View</th>
                                    </tr>
                                </thead>
                                <tbody class="table-border-bottom-0">
                                    {{#each order}}
                                    <tr>

                                        <td></td>
                                        <td>{{this.date}}</td>
                                        <td>{{this.orId}}</td>
                                        <td>{{this.urId}}</td>
                                        <td>{{this.methord}}</td>
                                        <td>â‚¹{{this.amount}}</td>
                                        <td><span class="status status-{{this.status}}">{{this.status}}</span></td>
                                        <td>
                                            <span class="table-action-td">
                                                <a href="/admin/order-list/details?orId={{this.orId}}"
                                                    data-bs-toggle="tooltip" data-bs-offset="0,4"
                                                    data-bs-placement="top" data-bs-html="true" title="view order">
                                                    <button type="button" class="btn rounded-pill btn-icon btn-dark">
                                                        <span class="tf-icons bx bxs-show"></span>
                                                    </button>
                                                </a>
                                            </span>
                                        </td>

                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->
</div>



<script>
    document.getElementById('user').classList += " active open"
</script>